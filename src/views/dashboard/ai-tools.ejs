<%- include('../partials/layout-protected-top', { title: 'AI Tools' }) %>
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6 text-blue-600">Available AI Tools</h1>
        
        <% if (tools && tools.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% tools.forEach(tool => { %>
                    <div class="bg-white shadow-md rounded-lg p-6">
                        <h2 class="text-xl font-semibold mb-2"><%= tool.name %></h2>
                        <p class="text-gray-600 mb-4">Subscription until: <%= tool.subscription.endDateFormatted %></p>
                        <a href="/dashboard/tools/<%= tool._id %>" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-300">
                            Use Tool
                        </a>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="bg-white shadow-md rounded-lg p-6">
                <p class="text-xl text-gray-600">No AI tools are currently available for your subscriptions.</p>
            </div>
        <% } %>

        <div class="mt-8">
            <a href="/dashboard" class="text-blue-500 hover:text-blue-600 font-semibold">
                &larr; Back to Dashboard
            </a>
        </div>
    </div>
<%- include('../partials/layout-public-bottom') %>