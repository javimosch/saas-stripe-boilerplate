<%- include('./partials/layout', { title: 'Setup Super Admin' }) %>
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Setup Super Admin Account</h1>
    <form action="/setup" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="existingUser">Select Existing User (Optional)</label>
            <select id="existingUser" name="existingUser" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" onchange="toggleFields(this)">
                <option value="">-- Select User --</option>
                <% users.forEach(user => { %>
                    <option value="<%= user._id %>"><%= user.email %></option>
                <% }); %>
            </select>
        </div>
        <div class="mb-4" id="emailDiv">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="email">Email</label>
            <input type="email" id="email" name="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        </div>
        <div class="mb-4" id="passwordDiv">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password">Password</label>
            <input type="password" id="password" name="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        </div>
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Create Super Admin</button>
    </form>
</div>
<%- include('./partials/layout-public-bottom') %>
<script>
    function toggleFields(select) {
        if (select.value !== "") {
            document.getElementById("emailDiv").style.display = "none";
            document.getElementById("passwordDiv").style.display = "none";
            // Clear the values of the hidden fields to avoid validation errors
            document.getElementById("email").value = '';
            document.getElementById("password").value = '';
        } else {
            document.getElementById("emailDiv").style.display = "block";
            document.getElementById("passwordDiv").style.display = "block";
        }
    }
</script>
