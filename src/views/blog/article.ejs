<%- include('../partials/layout') %>

    <div class="container mx-auto px-4 py-8">

        <section class="bg-white p-6 rounded-lg shadow-md mb-8">
            <h1 class="text-4xl font-bold mb-4 text-gray-800 text-center">
                <%= metadata.title %>
            </h1>
            

            <p class="text-sm text-gray-600 mb-4">By <%= metadata.author %></p>
            <p>Published on: <%= new Date(metadata.publishedDate).toLocaleDateString() %>
            </p>
        </section>

        <article class="bg-white p-6 rounded-lg shadow-md mb-8">
            <%- include(`./articles/${articlePath}`) %>
        </article>

        <section class="bg-white p-6 rounded-lg shadow-md mb-8">
            <a href="/blog" class="text-gray-800 hover:text-blue-800">Back to Articles</a>
        </section>
    </div>

    <%- include('../partials/layout-public-bottom') %>